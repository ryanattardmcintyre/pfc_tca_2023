@model IEnumerable<BusinessLogic.ViewModels.ItemViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <form action="/Items/Search" method="post">
        Search: &nbsp; <input type="text" name="keyword" /> &nbsp; <input type="submit" value="Submit" />
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                     
                    <img src="@item.ImagePath" style="width:100px;height:100px" />
                </td>
                <td>
                    @*<a href="/Items/Details/@item.Id">Details</a>*@
                    @Html.ActionLink("More Info", "Details", "Items", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <a href="/Items/Delete/@item.Id" onclick="return window.confirm('Are you sure?')" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
